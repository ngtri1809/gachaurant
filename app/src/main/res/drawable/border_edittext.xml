<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/text_box" /> <!-- Background color of the box -->
            <corners android:radius="10dp" /> <!-- Adjust the radius for rounded edges -->
            <padding android:left="8dp" android:right="8dp" android:top="16dp" android:bottom="16dp" /> <!-- Adjust margin -->
            <stroke android:width="1dp" android:color="@color/text_box" /> <!-- Border width and color -->
        </shape>
    </item>
</layer-list>
