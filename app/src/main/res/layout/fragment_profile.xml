<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/settingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:src="@mipmap/profile_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/replaceUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/replaceUsername"
            android:layout_marginTop="10dp"
            android:text="Level 0"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/checkin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Check-in"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:layout_marginTop="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@mipmap/small_checkin_foreground"/>

        <Button
            android:id="@+id/rewards"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Rewards"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@mipmap/small_reward_foreground"/>

    </LinearLayout>

</FrameLayout>